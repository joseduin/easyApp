<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_direcciones"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    tools:context="mundo.hola.jose.miprimerholamundo.Direcciones">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                style="@style/titulo"
                android:text="Mis Direcciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/aliasDirItem"
                android:layout_marginTop="@dimen/activity_vertical_margin" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/colorLineaDividir"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"/>


            <LinearLayout android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="?android:dividerHorizontal"
                android:animateLayoutChanges="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/añadirCarrito"
                android:text="Añadir nueva direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnAddNuevaDir"
                android:visibility="gone"
                android:layout_marginTop="@dimen/activity_vertical_margin" />/>

        </LinearLayout>

    </LinearLayout>

</ScrollView >
